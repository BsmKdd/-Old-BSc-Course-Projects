<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:screenOrientation="portrait"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/workoutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:tag="test">

        <RelativeLayout
            android:id="@+id/previousWorkoutLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_ripple">

                <TextView
                    android:id="@+id/dateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/assignedBy"
                    android:layout_marginBottom="5sp"
                    android:text="Finished: "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/finishDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/assignedBy"
                    android:layout_marginBottom="5sp"
                    android:layout_toRightOf="@+id/dateTitle"
                    android:text="Thursday 6th 16:20:04"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/moveCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/finishDate"
                    android:text="Moves: "
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/previousMovesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/finishDate"
                    android:layout_toRightOf="@+id/moveCountText"
                    android:text="6"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />


            </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>